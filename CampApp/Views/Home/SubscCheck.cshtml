@model CampApp.Models.SubscriptionModel

@{
    ViewData["Title"] = "Let's Camp!";
}

<head>
    <style>
        div {
            display: flex;
            justify-content: center;
        }

        /*#div {
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
        }*/

        td {
            text-align: center;
        }
    </style>
</head>


<body>
    <header>
        <h1 id="title">Let's Camp!</h1>
        <div id="LogIn">
            <a asp-area="" asp-controller="Home" asp-action="LogIn"><input type="button" value="ログイン"></a>
        </div>
        <nav>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">ホームページ</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Rental">レンタル</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Subscription">会員登録</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="E_Commerce">電子商取引について</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Inquiry">お問い合わせ</a>
                </li>
            </ul>
        </nav>
    </header>

    <h3>確認画面</h3>
    <div>
        <table border="1">
            <tr><th>お名前</th><td>@ViewBag.name</td></tr>
            <tr><th>フリガナ</th><td>@ViewBag.furigana</td></tr>
            <tr><th>性別</th><td>@ViewBag.gender</td></tr>
            <tr><th>生年月日</th><td>@ViewBag.birthday</td></tr>
            <tr><th>会員ID</th><td>@ViewBag.ID</td></tr>
            <tr><th>パスワード</th><td>@ViewBag.HidePassword</td></tr>
            <tr><th>郵便番号</th><td>〒@ViewBag.addressNum</td></tr>
            <tr><th>住所</th><td>@ViewBag.address</td></tr>
            <tr><th>電話番号</th><td>@ViewBag.phonenum</td></tr>
            <tr><th>メールアドレス</th><td>@ViewBag.mail</td></tr>
        </table>
    </div>
    <br>

    <div>
        @using (Html.BeginForm("SubscFinish", "Home"))
        {
            @Html.AntiForgeryToken();
            <p>この内容でよろしければ「登録する」ボタンを押してください。</p>
            <div><input type="submit" name="send" value="登録する"></div>
        }
    </div>
</body>